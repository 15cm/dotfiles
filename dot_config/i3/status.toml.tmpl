icons = "awesome"

[theme]
{{- if eq .global.theme "light"}}
name = "solarized-light"
{{- else}}
name = "modern"
{{- end}}
[theme.overrides]
separator = ""

[[block]]
block = "net"
device = "{{ .hardware.ethernet_device }}"
format = "{ip} {speed_down;K} {graph_down;K} {speed_up;K} {graph_up;K}"
interval = 5

[[block]]
block = "memory"
display_type = "memory"
format_mem = "{mem_used_percents}"
format_swap = "{swap_used_percents}"
