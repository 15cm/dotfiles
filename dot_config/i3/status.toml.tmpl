icons = "awesome"

[theme]
{{- if eq .global.theme "light"}}
name = "solarized-light"
{{- else}}
name = "modern"
{{- end}}
[theme.overrides]
separator = ""

[[block]]
block = "net"
device = "enp5s0"
ssid = true
ip = true
graph_down = true
graph_up = true
interval = 5

[[block]]
block = "memory"
display_type = "memory"
format_mem = "{Mup}%"
format_swap = "{SUp}%"
idle_bg = "ffffff"

# [[block]]
# block = "temperature"
# collapsed = false
# interval = 10
# format = "{min}° min, {max}° max, {average}° avg"
chip = "*-acpi-*"

[[block]]
block = "cpu"
interval = 1


[[block]]
block = "load"
interval = 1
format = "{1m}"

[[block]]
block = "nvidia_gpu"
label = "RTX 2060 Super"
show_memory = false
show_clocks = false
interval = 1

[[block]]
block = "disk_space"
path = "/"
alias = "/"
info_type = "available"
unit = "GB"
interval = 20
warning = 20.0
alert = 10.0


[[block]]
block = "sound"

[[block]]
block = "time"
interval = 60
format = "%a %m/%d/%Y %R"
